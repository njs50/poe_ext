{
  "name": "PoE Helper",
  "version": "0.72",
  "manifest_version": 2,

  "description": "Inventory and Crafting Helper for Path of Exile",

  "app": {
    "launch": {
      "local_path": "main.html",
      "container": "tab"
    }
  },

  "icons" : {
      "16" : "/assets/images/icon_16.png",
      "128" : "/assets/images/icon_128.png"
    },
  
  "update_url": "https://raw.github.com/njs50/poe_ext/master/poe_updates.xml",

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "permissions": ["http://www.pathofexile.com/*","http://webcdn.pathofexile.com/*", "clipboardWrite", "clipboardRead", "unlimitedStorage"]
}
